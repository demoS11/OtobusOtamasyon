<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KullaniciBilgileri">

    <TextView
        android:id="@+id/kullaniciBilgileri"
        android:layout_width="368dp"
        android:layout_height="39dp"
        android:layout_marginTop="10dp"
        android:text="Kullanıcı Bilgileri"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kullaniciDevamBtn"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:onClick="devam"
        android:text="Devam"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtViewİsim"
        android:layout_width="111dp"
        android:layout_height="32dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="11dp"
        android:text="İsim"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kullaniciBilgileri" />

    <TextView
        android:id="@+id/txtViewSoyisim"
        android:layout_width="138dp"
        android:layout_height="34dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="46dp"
        android:text="Soyisim"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtViewİsim"
        app:layout_constraintTop_toBottomOf="@+id/kullaniciBilgileri" />

    <EditText
        android:id="@+id/editTxtİsim"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewİsim" />

    <EditText
        android:id="@+id/editTxtSoyisim"
        android:layout_width="167dp"
        android:layout_height="43dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="17dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewSoyisim" />

    <TextView
        android:id="@+id/txtViewTc"
        android:layout_width="132dp"
        android:layout_height="32dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="11dp"
        android:text="Tc No"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtİsim" />

    <TextView
        android:id="@+id/txtViewTelefon"
        android:layout_width="133dp"
        android:layout_height="32dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="51dp"
        android:text="Telefon"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtViewTc"
        app:layout_constraintTop_toBottomOf="@+id/editTxtSoyisim" />

    <EditText
        android:id="@+id/editTxtTc"
        android:layout_width="149dp"
        android:layout_height="46dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewTc" />

    <EditText
        android:id="@+id/editTxtTelefon"
        android:layout_width="169dp"
        android:layout_height="46dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="17dp"
        android:ems="10"
        android:inputType="phone"
        android:maxLength="11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewTelefon" />

    <TextView
        android:id="@+id/txtViewEmail"
        android:layout_width="132dp"
        android:layout_height="32dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="11dp"
        android:text="E-mail"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtTc" />

    <EditText
        android:id="@+id/editTxtEmail"
        android:layout_width="320dp"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="17dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewEmail" />

    <CheckBox
        android:id="@+id/checkBoxSigorta"
        android:layout_width="317dp"
        android:layout_height="46dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="26dp"
        android:text="Sigorta (+5tl )"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/kullaniciDevamBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtEmail" />

</android.support.constraint.ConstraintLayout>