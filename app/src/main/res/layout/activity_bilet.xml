    <TextView
        android:id="@+id/txtViewNerdenNereye"
        android:layout_width="135dp"
        android:layout_height="34dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="18dp"
        android:text="Nereden-Nereye"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewAdSoyad" />

    <TextView
        android:id="@+id/txtViewToplamTutar"
        android:layout_width="162dp"
        android:layout_height="40dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="11dp"
        android:text="Toplam Tutar"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/odemeBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewBiletFiyati" />

    <Button
        android:id="@+id/odemeBtn"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:onClick="odeme"
